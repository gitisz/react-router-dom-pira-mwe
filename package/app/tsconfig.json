{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}